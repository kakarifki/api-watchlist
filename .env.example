# Database (Neon Postgres)
# Example: postgresql://<user>:<password>@<host>/<database>?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# JWT secret used to sign access tokens
JWT_SECRET=change-me-please

# Admin bootstrap (seed)
# The seed expects an already-hashed bcrypt password
# To generate: node -e "console.log(require('bcrypt').hashSync('admin123', 10))"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=$2b$10$replace_with_bcrypt_hash

# Toggle public registration endpoint (default disabled)
ALLOW_REGISTER=false

# Server port (optional; Koyeb provides PORT)
PORT=3000
