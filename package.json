{
  "name": "api-watchlist",
  "scripts": {
    "dev": "netlify dev",
    "prebuild": "node scripts/verify-build.js",
    "build": "npm run prebuild && tsc && npm run generate && npm run postbuild",
    "postbuild": "node -e \"const fs=require('fs-extra'); fs.ensureDirSync('netlify/functions/generated'); fs.copySync('src/generated', 'netlify/functions/generated')\"",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "seed": "node prisma/seed.js",
    "start": "netlify dev"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/zod-validator": "^0.7.2",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.5",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "@hono/swagger-ui": "^0.3.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.14.0",
    "ulid": "^2.3.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.5",
    "@types/node": "^20.10.5",
    "fs-extra": "^11.2.0",
    "netlify-cli": "^17.10.1",
    "typescript": "^5.6.3"
  }
}
